@import "helpers/_mixsins"
@import "helpers/_variables"
@import "helpers/_reset"
@import "helpers/_media"
@import "helpers/_animation"
@import "helpers/_flex-grid"

body
    font-family 'Roboto'
    background-color #B4B7B8
header
    position fixed
    top 0
    left 0
    z-index 50
    height 100vh
    width 15.62vw // ( 300px * 100% ) / 1950(разер экрана)
    background-color sidebar_bg
    color sidebar_font
    box-shadow 9px 0px 13px 0px rgba(70,70,70,0.55)

.st0
    fill #364048
.st1
    fill #364048
.logo
    width 100%
    height 11.57vh
    background-color #fff
    svg
        width 6vw 
.main_nav
    a
        transition all .4s linear
        text-decoration none
        color #ffffff
        text-transform uppercase
        font-size 0.93vmax // берем по большей грани
        line-height 1.66vmax
        height 3.22vmax
        display flex
        flex-flow row nowrap
        justify-content flex-end
        align-content center
        background-color #2f373b
        align-items center
        background rgb(51,59,63); /* Old browsers */
        background -moz-linear-gradient(top,  rgba(51,59,63,1) 0%, rgba(46,54,58,1) 98%); /* FF3.6-15 */
        background -webkit-linear-gradient(top,  rgba(51,59,63,1) 0%,rgba(46,54,58,1) 98%); /* Chrome10-25,Safari5.1-6 */
        background linear-gradient(to bottom,  rgba(51,59,63,1) 0%,rgba(46,54,58,1) 98%); /* W3C, IE10+, FF16+, Chrome26+, Opera12+, Safari7+ */
        padding-right 1.3vmax
        // width 100%
        &:hover
            background rgb(49,189,187); /* Old browsers */
            background -moz-linear-gradient(top,  rgba(49,189,187,1) 0%, rgba(24,163,161,1) 79%); /* FF3.6-15 */
            background -webkit-linear-gradient(top,  rgba(49,189,187,1) 0%,rgba(24,163,161,1) 79%); /* Chrome10-25,Safari5.1-6 */
            background linear-gradient(to bottom,  rgba(49,189,187,1) 0%,rgba(24,163,161,1) 79%); /* W3C, IE10+, FF16+, Chrome26+, Opera12+, Safari7+ */
    .active
        background rgb(49,189,187); /* Old browsers */
        background -moz-linear-gradient(top,  rgba(49,189,187,1) 0%, rgba(24,163,161,1) 79%); /* FF3.6-15 */
        background -webkit-linear-gradient(top,  rgba(49,189,187,1) 0%,rgba(24,163,161,1) 79%); /* Chrome10-25,Safari5.1-6 */
        background linear-gradient(to bottom,  rgba(49,189,187,1) 0%,rgba(24,163,161,1) 79%); /* W3C, IE10+, FF16+, Chrome26+, Opera12+, Safari7+ */
            
.filter__title
    color #1ab5b3
    fill #1ab5b3
    font-size 0.98vmax
    padding 1.25vmax
    text-align right
    svg
        margin-left 0.62vmax
        width 0.9vmax
        height 0.9vmax
.filter
    li
        width 100%
        text-align right
    a
        font-size 0.67vmax
        line-height 1.25vmax
        text-align right
        padding 0.41vmax 1.25vmax
        text-decoration none
        color #616669
        &:hover
            color #ffffff

.filter a.active
    color #ffffff
    
.social_bar
    border-top 1px solid #1e282b
    padding 1.25vmax
    // width 100%
    margin-top 1.25vmax
    a
        margin-left 0.52vmax
            
    svg
        width 1.3vmax
        height 1.3vmax
        transition all .4s linear
        &:hover
            transform scale(1.2)
.cop
    text-align right
    // width 100%
    font-size 0.62vmax
    color #6b7772
    padding-right 1.25vmax
.main
    // width 100%
    min-height 100vh
    padding-left 15.62vw
    
.work_box
    cover()
    max-width 21.09vw
    width 25%
    height 16.19vw
    position relative
    overflow hidden
    a
        position absolute
        z-index 2
        top 0
        left 0
        display flex
        width 100%
        height inherit
        background-color rgba(45,184,185,0.7)
        opacity 0
        color #ffffff
        flex-flow column nowrap
        justify-content center
        align-items center
        text-decoration none
        transition all .4s linear
        &:hover
            opacity 1
        h2
            font-size 1.25vw
            font-weight 400
            margin-bottom 0.78vw
        h3
            font-size 0.62vw
            font-weight 400
            &:after
                content ''
                width 100%
                height 1px
                margin-top 1vw
                margin-bottom 1vw
                display block
                background-color #fff
    .arrow
        width 3vw
        height 3vw
        fill #fff
        
.info
    z-index 100
    width 16.7vmax
    position fixed
    top 0
    right -14.6vmax
    transition all .4s linear
	.ico
	    width 2vmax
	    height 1.7vmax
	    background-color rgb(45,184,185)
	    fill #fff
	    padding 5px
	    cursor pointer
    .contact
		width 14.6vmax
		height 6.7vmax
		padding 1vmax
		background-color rgba(0,0,0,.7)
		ul
			display -webkit-flex
			display -moz-flex
			display -ms-flex
			display -o-flex
			display flex
			flex-flow column nowrap
			align-content space-between
			height 100%
		li
			color #fff
			font-size 0.8vmax
			display -webkit-flex
			display -moz-flex
			display -ms-flex
			display -o-flex
			display flex
			flex-flow row nowrap
			margin auto 0
                     
			svg
				margin-right 10px
				fill #fff
				width 1vmax
				height 1vmax
.open
    position fixed
    right 0
    top 0
    
// WORK.HTML
.wrapp
    margin 1.56vmax
    padding 1.56vmax
.white
    background-color white
    
.info_work_box 
	.left_info, .right_info
		padding-left 1vw
		padding-right 1vw
		width 50%

	.left_info
		border-right 1px solid #e5e5e5
		.img_box_work
			position relative
			width 100%
			overflow hidden
			height 29.16vw
			img
                width 100%
                height auto
            .slides
                position relative
                width 100%
                height 29.16vw
                padding 0px
                margin 0px
                .slide
                    position absolute
                    left 0
                    top 0
                    width 100%
                    opacity 0
                    z-index 10
                    transition opacity 1s
                .showing
                    opacity 1
			.controlls
				position absolute
				bottom 1.5vw
				right 1.5vw
				z-index 15 
				.square
                    background-color #B6B6B6
                    border 1px solid #fff
                    width 1.1vw
                    height 0.7vw
                    transition .4s
                    margin-right .4vw
                    &:hover
                        background-color #40BCBA
                        border 1px solid #6B6B6B
				.act
					background-color #40BCBA
					border 1px solid #6B6B6B
		.about_work
			border-bottom 1px solid #e5e5e5
				
				
.info__title
	margin-top 1.3vw
	font-size 1.25vw
	line-height 1.35vw
	font-weight 200
	color #000000
	margin-bottom 1vw
    
.info__text
	margin-bottom 2.39vw
	font-size 0.9vw
	line-height 1.5vw
	color #a3a3a3
             
	
.project_info li
	display -webkit-flex
	display -moz-flex
	display -ms-flex
	display -o-flex
	display flex
	flex-flow row nowrap
	justify-content flex-start
	align-items center
	font-size 0.8vw
	line-height 1.56vw
	color #848484
	padding 0.72vw 0
	border-bottom 1px solid #e5e5e5
	svg
		width 1.8vw
		height 1.8vw
		margin-right 0.67vw

.tags, .gallery, .features, .related
	margin-top 1.56vw
	.tag
		padding 0.5vw 0.9vw
		margin-right 0.6vw
		color #a3a3a3
		border 1px solid #a3a3a3
		border-radius 10px
		font-size 0.67vw
		line-height 1.6vw
.related img
	width 12.5vw
	height 9.4vw
.gal img
	margin-right 0.62vw
	margin-bottom 0.62vw
	width 4vw
	height 4vw
.features
	height 100%
	li
		font-size 0.7vw
		line-height 1.56vw
		color #a3a3a3
		svg
			width 0.7vw
			height 0.7vw
			fill #a3a3a3
// ABOUT
.img_box
    width 37.5vw
    height 15.7vw
    cover()

.who_we_are
	border-bottom: 1px solid #e5e5e5;
	color #a3a3a3
	font-size 0.93vw
	font-weight 400
	line-height 1.56vw
.pictures
	.block
		position relative
		margin-right vw(10)
		margin-bottom vw(10)
		
	img
		width vw(227)
.overlay
	coverdiv()
	z-index 100
	background-color rgba(45,184,183,0.8)
	opacity 0
	cursor pointer
	tr()
	&:hover
		opacity 1
	h3
		margin-top vw(75)
		text-align center
		color white
		font-size vw(16)
		line-height vw(26)
		text-transform uppercase
	p
		text-align center
		color white
		font-size vw(13)
		line-height vw(26)
.skils
	li
		margin-bottom vw(18)
		font-size vw(15)
		color #727272
		&:last-of-type
			color #000
	.progress
		width 100%
		height vw(35)
		border 1px solid #ececec
		margin-top vw(10)
		&__bar
			background-color #e2e2e2
			height inherit
.testimonials
	.top
		background-color #1ab5b3
		img
			width vw(80)
			height vw(80)
		p
			color white
			padding-left vw(25)
	.bottom
		padding vw(30)
		border 1px solid #ececec
		border-top none
		p
			font-size 0.9vw
			line-height 1.5vw
			color #a3a3a3
.services
	height 100%
	ul
		list-style-type disc !important	
	li
		margin-left vw(15)
		font-size 0.7vw
		line-height 1.56vw
		color #a3a3a3