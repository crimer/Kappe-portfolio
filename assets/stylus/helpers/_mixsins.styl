cover(image = none)
    background-image image
    background-repeat no-repeat
    background-size cover
    -o-background-size cover
    -moz-background-size cover
    -webkit-background-size cover
    background-position 50% 50%
    
// horizontal line
line(w,h,color)
    &:after
        content ''
        display block
        width w
        height h
        background-color color
        
// vertical-align at center
vcenter()
    position absolute
    top 50%
    left 50%
    transform translate(-50%,-50%)

//simple gradient
g(color1, color2)
    background linear-gradient(color1, color2)

tr(what = all, when = 0.25s, how = linear)
    -webkit-transition what when how
    -moz-transition what when how
    -ms-transition what when how
    -o-transition what when how
    transition what when how

rem(size)
	return (size/16)rem
    
vw(size)
    return (size/1920*100)vw
     
vh(size)
    return (size/1920*100)vh 

size(a, b = false)
	width a
	if b
		height b
	else
		height a

justify()
    text-align justify
    line-height 0
    font-size 0
    text-align-last justify
    &:after
        content ""
        display inline-block
        width 100%
        height 0px
        visibility hidden
        overflow hidden

vertical()
    text-align center
    font-size 0
    &:before
        content ""
        display inline-block
        vertical-align middle
        width 0
        height 100%

clr()
    &:after
        content " "
        display block
        height 0
        visibility hidden
        clear both

rotate(var)
    transform rotate(var+ "deg")

